{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "mocha", "chai"]
  },
  "include": [
    "scripts/**/*",
    "test/**/*",
    "contracts/**/*",
    "hardhat.config.ts",
    "ignition/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cache",
    "artifacts",
    "src"
  ]
}